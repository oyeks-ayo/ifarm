# Database Configuration
# For PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/ifarm_db
#
# For MySQL:
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/ifarm_db
#
# For SQLite (development):
# DATABASE_URL=sqlite:///ifarm.db

DATABASE_URL=postgresql://postgres:0000@localhost:5432/ifarm_db

# Flask Security
# Generate a secure key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_secret_key_here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1

# Email Configuration (if applicable)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=1
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password

# Application Settings
APP_HOST=localhost
APP_PORT=5000
